<Window x:Class="KeeperPRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeeperPRO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260*"/>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition Width="260*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" Style="{StaticResource HeadingText}" />
            <TextBlock Text="Введите код сотрудника" Margin="5" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbCodeEmployee"/>
            <Button Content="Авторизоваться" Margin="5" Click="Button_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="0,0,276,174"/>
    </Grid>
</Window>
